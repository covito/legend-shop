<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

	<!--  LegendShop 版权所有, 并保留所有权利。 -->

<hibernate-mapping>
	<class name="com.legendshop.model.entity.Message" table="ls_message">
	<id name="msgId" column="msg_id" type="java.lang.String">
     <generator class="native" />
	</id>
	<property name="content" column="content" type="java.lang.String" />
	<property name="delBySender" column="del_by_sender" type="java.lang.Integer" />
	<property name="delByReceiver" column="del_by_receiver" type="java.lang.Integer" />
	<property name="isread" column="isread" type="java.lang.Integer" />
	<property name="isdraft" column="isdraft" type="java.lang.Integer" />
	<property name="title" column="title" type="java.lang.String" />
	<property name="sender" column="sender" type="java.lang.String" />
	<property name="receiver" column="receiver" type="java.lang.String" />
	<property name="createDate" column="create_date" type="java.util.Date" />
	<property name="modifyDate" column="modify_date" type="java.util.Date" />

	</class>
</hibernate-mapping>
